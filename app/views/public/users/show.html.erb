<div class="container">
  <div class="row">
    <%= render "public/articles/sidebar" %>
    <div class="col-lg-8">
      <%= render "public/users/user_profile", user: @user %>
      <% @articles.each do |article| %>
        <%= render "public/articles/article_index", article: article %>
      <% end %>
      <div class="row">
        <div class="mx-auto">
          <%= paginate @articles %>
        </div>
      </div>
    </div>
  </div>
</div>