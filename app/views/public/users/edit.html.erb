<div class="container">
  <div class="row">
    <%= render "public/articles/sidebar" %>
    <div class="col-lg-8">
      <h3>プロフィールを編集</h3>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <label class="mr-1"><%= f.label :ユーザーネーム%></label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label class="mr-5 pr-1"><%= f.label :自己紹介 %></label>
          <%= f.text_area :introduction,  size: "40x5"  %>
        </div>
        <%= f.submit "プロフィール更新", class:"btn light_green_btn" %>
      <% end %>
      <div class="row">
        <div class="col-lg-9 text-right">
        <i class="mr-5 mt-4"><%= link_to "退会する", delete_user_path, method: :patch, class: "btn btn-outline-danger col-2", data: {confirm:"本当に退会しますか？"} %></i></div>
      </div>
    </div>
  </div>
</div>