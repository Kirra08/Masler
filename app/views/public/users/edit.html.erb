<div class="container">
  <div class="row">
    <%= render "public/articles/sidebar" %>
    <div class="col-lg-8">
      <h3>プロフィールを編集</h3>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :名前%>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction %>
        </div>
        <%= f.submit "プロフィール更新" %>
      <% end %>
    </div>
  </div>
</div>