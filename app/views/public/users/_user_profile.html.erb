<div class="row profile_header">
  <div class="col-lg-1">
    <%= link_to articles_path do %>
      <i class="fas fa-arrow-left fa-2x mt-3 articles_link"></i>
    <% end %>
  </div>
  <div class="col-lg-7">
    <div class="row">
      <h3><%= user.name %></h3>
    </div>
    <div class="row ">
      <%= user.articles.count %>件の投稿
    </div>
  </div>
  <div class="col-lg-4" id="follow_btn">
    <%= render "public/relationships/follow_btn", user: user %>
  </div>
</div>
<div class="row p-2 border-left border-right border-top" style="background-color: #90ee90">
  <div class="col-lg-5">
    <%= image_tag user.get_profile_image(290,290) %>
  </div>
  <div class="col-lg-7">
    <div class="row">
      <div class="col-lg-10">
        <h3 class="ml-2 mt-2"><%= user.name %></h3>
      </div>
      <div class="col-lg-2">
        <%= link_to user_calendars_path(user)  do %>
          <i class="far fa-calendar fa-3x text-dark calendar"></i>
        <% end %>
      </div>
    </div>
    <div class="row m-3 mt-5">
      <%= user.introduction %>
    </div>
    </div>
</div>
<div id="follow_list_btn">
  <%= render "public/relationships/follow_list_btn",user: @user %>
</div>