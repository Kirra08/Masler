<div class="row border p-2">
  <div class="col-lg-4">
    <div style="text-align : center">
      <%= link_to user_path(user)  do %>
        <%= image_tag user.get_profile_image(200,150) %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="row">
      <div class="col-lg-7">
        <div class="mt-2"><%= user.name %></div>
      </div>
      <% if profile_id == current_user.id %>
        <div class="col-lg-5" id="follow_btn-<%= user.id %>">
          <%= render "public/relationships/follow_btn", profile_id: profile_id, user: user %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <%= user.introduction %>
      </div>
    </div>
  </div>
</div>