<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <%= form_with model: @article, url: articles_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :投稿タイトル %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :トレーニングに関する投稿ですか？ %>
          <%= f.radio_button :article_genre, "true" %>
          <%= f.label "はい" %>
          <%= f.radio_button :article_genre, "false" %>
          <%= f.label "いいえ" %>
        </div>
        <div class="form-group">
          <%= f.label :動画 %>
          <%= f.file_field :article_image %>
        </div>
        <div class="form-group">
          <%= f.label :トレーニング部位 %>
          <%= f.collection_select :body_part_genre_id, @body_part_genres, :id, :name, prompt: "--選択してください--" %>
        </div>
        <div class="form-group">
          <%= f.label :使用器具 %>
          <%= f.collection_select :gear_genre_id, @gear_genres, :id, :name, prompt: "--選択してください--" %>
        </div>
        <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_area :text %>
        </div>
        <div class="form-group">
          <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>
        <%= f.submit "新規投稿" %>
      <% end %>
    </div>
  </div>
</div>