<div class="col-lg-3">
<% if user_signed_in? %>
  <div class="row mt-5">
    <%= link_to articles_path do %>
      <h4 class="text-dark sidebar d-flex align-items-center ml-2" style="height: 50px">　<i class="fas fa-home"></i><i class="text-secondary">　ホーム　</i></h4>
    <% end %>
  </div>
    <div class="row">
      <%= link_to user_calendars_path(current_user) do %>
        <h4 class="text-dark sidebar d-flex align-items-center ml-2" style="height: 50px">　<i class="far fa-calendar"></i><i class="text-secondary">　カレンダー　</i></h4>
      <% end %>
    </div>

    <div class="row">
      <%= link_to favorite_index_path do %>
        <h4 class="text-dark sidebar d-flex align-items-center ml-2" style="height: 50px">　<i class="far fa-heart"></i><i class="text-secondary">　いいね　</i></h4>
      <% end %>
    </div>

    <div class="row">
      <%= link_to user_library_path(current_user) do %>
        <h4 class="text-dark sidebar d-flex align-items-center ml-2" style="height: 50px">　<i class="fas fa-check"></i><i class="text-secondary">　タイムライン　</i></h4>
      <% end %>
    </div>


    <div class="row">
      <%= link_to user_path(current_user) do %>
        <h4 class="text-dark sidebar d-flex align-items-center ml-2" style="height: 50px">　<i class="far fa-user"></i><i class="text-secondary">　プロフィール　</i></h4>
      <% end %>
    </div>

  <div class="row">
    <h5 class="post_btn d-flex align-items-center ml-5 mt-2"><%= link_to new_article_path do %><i class="text-white">　　新規投稿　　</i></h5><% end %>
  </div>
<% end %>
</div>