<div class="container">
  <div id="erorr">
    <%= render "layouts/error_messages", model: @article %>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <%= form_with model: @article do |f| %>
        <div class="form-group">
          <label class="mr-4"><%= f.label :投稿タイトル %></label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :トレーニングに関する投稿ですか？ %>
          <%= f.radio_button :article_genre, "true" %>
          <%= f.label "はい" %>
          <%= f.radio_button :article_genre, "false" %>
          <%= f.label "いいえ" %>
        </div>


        <div class="form-group">
          <%= f.label :トレーニング部位 %>
          <%= f.collection_select :body_part_genre_id, @body_part_genres, :id, :name, prompt: "--選択してください--" %>
        </div>

        <div class="form-group">
          <label class="mr-5 pr-3"><%= f.label :使用器具 %></label>
          <%= f.collection_select :gear_genre_id, @gear_genres, :id, :name, prompt: "--選択してください--" %>
        </div>

        <div class="form-group">
          <label for="remark" class="mr-5 pr-3"><%= f.label :投稿説明%></label>
          <%= f.text_area :text , size: "40x5"%>
        </div>

        <h3>トレーニング手順</h3>
        <div class="row">
          <div class="col-lg-6">
            1
            <i class="fas fa-camera"></i>
            <%= f.file_field :article_image %>

             <div class="mt-2"><%= f.text_area :method1_text, placeholder: "トレーニング方法を入力してください", size: "40x5"%></div>
             <div class="mt-3">
            3
            <i class="fas fa-camera"></i>
            <%= f.file_field :article_image3 %>

            <div class="mt-2"><%= f.text_area :method3_text, placeholder: "トレーニング方法を入力してください", size: "40x5"%></div>
            </div>
          </div>
          <div class="col-lg-6">
            2
            <i class="fas fa-camera"></i>
            <%= f.file_field :article_image2 %>

            <div class="mt-2"><%= f.text_area :method2_text, placeholder: "トレーニング方法を入力してください", size: "40x5"%></div>

            <div class="mt-3">
            4
            <i class="fas fa-camera"></i>
            <%= f.file_field :article_image4 %>

            <div class="mt-2"><%= f.text_area :method4_test, placeholder: "トレーニング方法を入力してください", size: "40x5"%></div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>
        <div class="text-center mr-4"><%= f.submit "投稿編集", class:"btn btn-success"%></div>
      <% end %>
    </div>
  </div>
</div>