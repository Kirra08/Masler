<div class="row border p-2">
  <div class="col-lg-4">
    <div style="text-align : center">
      <%= link_to user_path(user)  do %>
        <%= image_tag user.get_profile_image(200,150) %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="row">
      <div class="col-lg-7">
        <div class="mt-2"><%= user.name %></div>
      </div>
      <div class="col-lg-5">
      <%if current_user.following?(user) %>
        <div class="mt-3 ml-5"><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></div>
      <% else %>
        <div class="mt-3 ml-5"><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-sm btn-success" %></div>
      <% end %>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <%= user.introduction %>
      </div>
    </div>
  </div>
</div>