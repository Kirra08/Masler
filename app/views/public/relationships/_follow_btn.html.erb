<%if current_user.following?(user) %>
  <div class="mt-3 ml-5"><%= link_to "フォローを外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></div>
<% else %>
  <div class="mt-3 ml-5"><%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-sm btn-success" %></div>
<% end %>