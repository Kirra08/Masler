$('#comments').html("<%= j(render "public/article_comments/comment_index", article_comments: @article_comments, article: @article) %>");
$(".text_area").val("");
$('#flash-message').html('<%= j(render "layouts/flash_message") %>');
$('#erorr').html("<%= j(render 'layouts/error_messages', model: @article_comment) %>");
$('#comments_count').html("<%= j(render 'public/article_comments/comments_count', article: @article) %>");

function sleep(msec) {
   return new Promise(function(resolve) {

      setTimeout(function() {resolve()}, msec);

   })
};

$(document).ready(function (){
  $('#flash-message').slideDown(1000,async function start(){
    await sleep(2000);
    $('#flash-message').slideUp(1000);
  });
});