<div class="container">
  <div class="row">
    <%= render "public/articles/sidebar" %>
    <div class="col-lg-8 md-lg-1">
      <%= render "public/articles/articles", articles: @articles, text: "検索結果" %>
      <% @articles.each do |article| %>
        <%= render "public/articles/article_index", article: article %>
      <% end %>
      <div class="row">
        <div class="mx-auto">
          <%= paginate @articles %>
        </div>
      </div>
    </div>
  </div>
</div>