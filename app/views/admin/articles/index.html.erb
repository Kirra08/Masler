<div class="container">
  <div class="row">
    <div class="col-lg-4 ml-5 mb-3">
      <h2>投稿一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>投稿ユーザー名</th>
            <th>投稿タイトル</th>
            <th>投稿日時</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= link_to article.user.name, admin_user_path(article.user) %></td>
              <td><%= link_to article.title, admin_article_path(article) %></td>
              <td><%= article.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= link_to "投稿を削除する", admin_article_path(article), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-outline-danger btn-sm"%></td>
            </tr>
          <% end %>
        </tbody>
      </tabla>
    </div>
  </div>
</div>